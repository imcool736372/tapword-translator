{
    "manifest_version": 2,
    "name": "TapWord Translator",
    "version": "0.3.1",
    "description": "__MSG_extDescription__",
    "default_locale": "en",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "storage",
        "https://*.tapword.cc/*",
        "https://local.tapword.cc/*"
    ],
    "background": {
        "scripts": ["src/2_background/index.ts"]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "options_ui": {
        "page": "src/4_options/index.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        "assets/*",
        "icons/*",
        "resources/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "tapword-translator@example.com",
            "strict_min_version": "128.0",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    }
}
